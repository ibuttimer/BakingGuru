<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:defaultValue="@bool/pref_caching_dflt_value"
        android:key="@string/pref_caching_key"
        android:summaryOn="@string/pref_description_caching_on"
        android:summaryOff="@string/pref_description_caching_off"
        android:title="@string/pref_title_caching" />

    <ListPreference
        android:defaultValue="@string/pref_cache_length_dlft_value"
        android:entries="@array/pref_cache_length_titles"
        android:entryValues="@array/pref_cache_length_values"
        android:key="@string/pref_cache_length_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_cache_length" />

    <Preference
        android:defaultValue="@bool/pref_clear_cache_dflt_value"
        android:key="@string/pref_clear_cache_key"
        android:title="@string/pref_title_clear_cache" />

</PreferenceScreen>

