<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_ingredient_list_item"
    android:layout_marginLeft="@dimen/sml_margin"
    android:layout_marginStart="@dimen/sml_margin"
    android:layout_marginRight="@dimen/sml_margin"
    android:layout_marginEnd="@dimen/sml_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_quantity_ingredient_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:minWidth="@dimen/ingredient_qty_measure_width"
        tools:text="@string/quantity" />
    <TextView
        android:id="@+id/tv_measure_ingredient_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.175"
        android:layout_marginLeft="@dimen/sml_margin"
        android:layout_marginStart="@dimen/sml_margin"
        android:minWidth="@dimen/ingredient_qty_measure_width"
        android:textStyle="italic"
        tools:text="@string/measure" />
    <TextView
        android:id="@+id/tv_ingredient_ingredient_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sml_margin"
        android:layout_marginStart="@dimen/sml_margin"
        android:layout_weight="0.725"
        tools:text="@string/ingredient" />
</LinearLayout>